<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Esercizio18Aprile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Esercizio18Aprile"
    BackGroundColor="MediumVioletRed"
    Title="Esercizio18Aprile">

    <Shell.FlyoutHeader>
        <ContentView HeightRequest="200">
            <Image Source="stemma_di_grosseto.jpg" />

        </ContentView>

    </Shell.FlyoutHeader>
    <FlyoutItem Title="Grosseto>">

        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"></ShellContent>
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Meteo>">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:MeteoPage}"></ShellContent>
        </Tab>
    </FlyoutItem>
    <Shell.FlyoutFooter>
        <Label Text="Made by Citro"
               TextColor="Black"></Label>
    </Shell.FlyoutFooter>


</Shell>
